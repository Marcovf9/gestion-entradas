generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Zona {
  id      Int      @id @default(autoincrement())
  nombre  String
  precio  Int
  color   String
  butacas Butaca[]
}

model Butaca {
  id      Int     @id @default(autoincrement())
  fila    Int
  columna Int
  zona    Zona    @relation(fields: [zonaId], references: [id])
  zonaId  Int
  estado  String  @default("DISPONIBLE")
}